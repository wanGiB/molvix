<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.molvix.android.ui.widgets.MolvixTextView
            android:id="@+id/list_item_season_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/list_item_left_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Season"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:textStyle="medium" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_item_season_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/horizontal_margin"
            app:srcCompat="@drawable/ic_arrow_down" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ease_gray" />

</LinearLayout>
