<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/incoming_bubbles_color"
    android:orientation="vertical">

    <com.molvix.android.ui.widgets.MolvixTextView
        android:id="@+id/episode_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Episode"
        android:textColor="@color/gray95"
        android:textSize="15sp"
        app:textStyle="medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/episode_download_options_spinner_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:entries="@array/episode_download_options" />

        <com.molvix.android.ui.widgets.MolvixTextView
            android:id="@+id/episode_download_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="@string/download"
            android:textColor="@color/linked_in"
            android:textSize="14sp"
            app:textStyle="medium"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/download_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/downloadProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downloadProgressBar"
            android:orientation="horizontal">

            <com.molvix.android.ui.widgets.MolvixTextView
                android:id="@+id/download_progress_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textAlignment="center"
                app:textStyle="regular" />

            <Button
                android:id="@+id/cancel_download_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ease_gray"
        android:paddingTop="5dp" />

</LinearLayout>