<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bitcoin_donations_root_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/bitcoin"
        tools:ignore="ContentDescription" />

    <com.molvix.android.ui.widgets.MolvixTextView
        android:id="@+id/bitcoin_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bitcoin_address_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/bitcoin_address"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:textStyle="bold" />

    <com.molvix.android.ui.widgets.MolvixTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/wallet_reception_disclaimer"
        android:textColor="@color/ease_gray"
        android:textSize="12sp"
        app:textStyle="medium" />

</LinearLayout>