<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="movie_name_color">@color/black</item>
        <item name="movie_card_background_color">@color/white</item>
        <item name="movie_art_background_color">@color/light_gray</item>
        <item name="movie_description_color">@color/text_light_dark</item>
        <item name="movie_seasons_color">@color/ease_gray_dark</item>
        <item name="movie_cell_divider_background_color">@color/window_background</item>
        <item name="root_view_background_color">@color/window_background</item>
        <item name="bottom_navigation_background_color">@color/white</item>
        <item name="app_card_background_color">@color/white</item>
        <item name="search_box_background_color">@color/white</item>
        <item name="search_text_color">@color/black</item>
        <item name="search_hint_color">@color/gray50</item>
        <item name="search_icon_color">@color/gray50</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="app_updater_card_background_color">@color/white</item>
        <item name="app_updater_divider_background_color">@color/ease_gray</item>
        <item name="anti_root_view_background_color">@color/dracula_primary</item>
        <item name="light_background_color">@color/light_gray</item>
        <item name="app_background_color">@color/light_gray</item>
        <item name="header_text_color">@color/gray50</item>
        <item name="notification_time_color">@color/gray50</item>
        <item name="notification_body_color">@color/black</item>
        <item name="app_vibrant_background_color">@color/white</item>
        <item name="anti_app_vibrant_background_color">@color/lighter_blue</item>
        <item name="surface_color">@color/white</item>
        <item name="season_view_underline_color">@color/ease_gray</item>
        <item name="movie_details_back_icon_color">@color/black</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/dracula_primary</item>
        <item name="colorPrimaryDark">@color/dracula_primary_dark</item>
        <item name="movie_name_color">@color/white</item>
        <item name="movie_card_background_color">@color/dracula_album_popup_bg</item>
        <item name="movie_art_background_color">
            @color/dracula_surface_color
        </item>
        <item name="movie_description_color">@color/text_white_87</item>
        <item name="movie_seasons_color">@color/movie_seasons_color</item>
        <item name="movie_cell_divider_background_color">@color/dracula_window_background</item>
        <item name="root_view_background_color">@color/dracula_window_background</item>
        <item name="bottom_navigation_background_color">@color/dracula_primary_dark</item>
        <item name="app_card_background_color">@color/dracula_album_popup_bg</item>
        <item name="search_box_background_color">
            @color/dracula_surface_color
        </item>
        <item name="search_text_color">@color/white</item>
        <item name="search_hint_color">@color/movie_seasons_color</item>
        <item name="search_icon_color">@color/movie_seasons_color</item>
        <item name="android:windowBackground">@color/dracula_primary</item>
        <item name="app_updater_card_background_color">@color/dracula_primary</item>
        <item name="app_updater_divider_background_color">
            @color/movie_seasons_color
        </item>
        <item name="anti_root_view_background_color">@color/colorPrimary</item>
        <item name="light_background_color">@color/dracula_surface_color
        </item>
        <item name="app_background_color">@color/dracula_primary</item>
        <item name="header_text_color">@color/colorPrimary</item>
        <item name="notification_time_color">@color/movie_seasons_color</item>
        <item name="notification_body_color">@color/white</item>
        <item name="app_vibrant_background_color">@color/dracula_primary</item>
        <item name="anti_app_vibrant_background_color">@color/dracula_surface_color</item>
        <item name="surface_color">@color/dracula_surface_color</item>
        <item name="season_view_underline_color">@color/dracula_primary</item>
        <item name="movie_details_back_icon_color">@color/white</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- basea style for button -->
    <!-- Widgets -->
    <style name="Widget" />

    <style name="Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- styles for Login buttons -->
    <style name="Widget.Button.Login" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Button.Normal" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/linked_in</item>
    </style>

    <style name="Widget.Button.Delete" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorGoogle</item>
    </style>

    <string name="ad_attribution">Ad</string>

    <style name="Theme.Rating" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/rating_bar_progress_tint</item>
    </style>

    <style name="Theme.SeekBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
